{
  "name": "ai-learn",
  "private": true,
  "version": "1.0.0",
  "description": "AI Learning Monorepo",
  "scripts": {
    "dev": "pnpm -F @ai-learn/app dev",
    "build": "pnpm run build:pkg && pnpm run build:app",
    "build:pkg": "pnpm -F @ai-learn/utils build",
    "build:app": "pnpm -F @ai-learn/app build",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@langchain/classic": "^1.0.7",
    "@langchain/core": "^1.1.8",
    "@langchain/mcp-adapters": "^1.1.1",
    "@langchain/openai": "^1.2.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "chalk": "^5.6.2",
    "dotenv": "^16.0.0",
    "zod": "^4.3.4"
  }
}
